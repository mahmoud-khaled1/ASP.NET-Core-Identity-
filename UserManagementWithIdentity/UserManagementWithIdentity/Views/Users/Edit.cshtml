@model ProfileFormViewModel



<form class="m-10" id="" method="post" asp-action="Edit">

  <input  type="hidden" asp-for="Id"/>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating">
        <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" maxlength="100" />
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true" maxlength="100" />
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    
    <button type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
